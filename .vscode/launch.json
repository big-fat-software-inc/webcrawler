  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.js"
    },
    {
      "command": "npm run scan",
      "name": "Run npm scan",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm run scan:url",
      "name": "Read URL from terminal - npm scan",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
